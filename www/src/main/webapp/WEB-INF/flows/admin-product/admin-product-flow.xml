<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="parent-flow">
	
	<var name="treeBean" class="org.veetouch.view.product.TreeBean" />
	<on-start>
		<evaluate expression="treeBean.init(vt_productService.listAllMainProduct())"></evaluate>
	</on-start>
	
	<view-state id="product-list">
		<on-render>
			<evaluate expression="vt_productService.listAllMainProduct()" result="viewScope.main_products" ></evaluate>
		</on-render>
		<transition on="addMainProduct">
			<evaluate expression="vt_productService.listAllMainProduct()" result="viewScope.main_products" ></evaluate>
		</transition>
	</view-state>

</flow>