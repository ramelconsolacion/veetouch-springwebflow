<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="parent-flow">
	
	<var name="galleriaBean" class="org.veetouch.primefaces.product.GalleriaOverall"/>
	<var name="menuBean" class="org.veetouch.view.product.MenuBean" />

	<on-start>
		<evaluate expression="menuNavigator.setPage('PRODUCT')"></evaluate>
	</on-start>
	
	<view-state id="product-list">
		<on-entry>
			<evaluate expression="vt_productService.listAllProduct()" result="viewScope.products" result-type="dataModel"></evaluate>
		</on-entry>
		<on-render>
			<evaluate expression="menuBean.init()"></evaluate>
		</on-render>
		
		<transition on="viewSubProduct" to="sub-product-list"></transition>
	</view-state>
	
	<view-state id="sub-product-list">
		<on-render>
			<evaluate expression="menuBean.init()"></evaluate>
		</on-render>
		
	</view-state>
	
	<view-state id="product-detail">
		<on-render>
			<evaluate expression="menuBean.init()"></evaluate>
		</on-render>
		
	</view-state>
	
</flow>